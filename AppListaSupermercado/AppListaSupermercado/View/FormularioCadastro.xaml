<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppListaSupermercado.View.FormularioCadastro">
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Novo Produto"
                  FontSize="Body"
                  HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="txt_Quantidade" Placeholder="Quantidade" Keyboard="Numeric" />
            <Entry x:Name="txt_ValorEstimado" Placeholder="Valor Estimado" Keyboard="Numeric" />

            <Button x:Name="Btn_AddProduto" Clicked="Btn_AddProduto_Clicked" Text="Adicionar" BackgroundColor="Green" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>